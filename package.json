{
  "name": "capitalize-lightweight",
  "version": "1.0.0",
  "description": "2 lightweight helper functions to do 'helloWORLD' → 'Helloworld' or 'helloWORLD' → 'HelloWORLD'.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "clear-build-folder": "rm -rf ./build",
    "transpile": "tsc",
    "fix-paths": "tsc-alias",
    "build": "yarn clear-build-folder && yarn transpile && yarn fix-paths",
    "dev": "yarn nodemon",
    "test": "jest"
  },
  "keywords": [
    "capitalize",
    "string",
    "strings",
    "uppercase",
    "lowercase"
  ],
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maks-io/capitalize-lightweight.git"
  },
  "author": "Markus Kurzmann <markus@kurzmann.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maks-io/capitalize-lightweight/issues"
  },
  "homepage": "https://github.com/maks-io/capitalize-lightweight#readme",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.0.4"
  }
}
